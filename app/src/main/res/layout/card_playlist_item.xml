<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/song_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                tools:showIn="@layout/bottomsheet_playlist">

    <ImageButton
            android:id="@+id/reorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackground"
            android:cropToPadding="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="8dp"
            android:tint="?android:attr/textColorHint"
            app:srcCompat="@drawable/ic_reorder_black_24dp"/>

    <ImageView
            android:layout_toRightOf="@id/reorder"
            android:layout_toEndOf="@id/reorder"
            android:id="@+id/album_art"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/album_art"
            tools:src="@drawable/cover_drake"/>

    <TextView
            android:id="@+id/song_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/album_art"
            android:layout_toRightOf="@id/album_art"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="6pm in New York"/>

    <TextView
            android:id="@+id/song_item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_item_title"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/album_art"
            android:layout_toRightOf="@id/album_art"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Drake"/>

</RelativeLayout>